<!DOCTYPE html>
<html>
  <head>
    <title>Reddit Lite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="banner">
      <h1 id="banner-header">Reddit Lite</h1>
    </div>

    <ul class="nav">
      <li><%= link_to "Posts", posts_path %></li>
      <li><%= link_to "Users", users_path %></li>
      

      <% if @current_user %>
        <li class="right"><%= link_to "logout", logout_path, method: :delete  %></li>
        <li class="right">Welcome <%= @current_user.username %></li>
      <% else %>
        <li class="right"><%= link_to "Sign Up", new_user_path %></li>
        <li class="right"><%= link_to "Login", new_login_path %></li>
      <% end %>
    </ul>

    <div class="container">
      <%= yield %>
    </div>
   
  </body>
</html>
