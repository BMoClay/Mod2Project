<h1> Edit a Post! </h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors] do |error| %>
      <li><%= error %></li>
    <% end%>
  </ul>
<% end%>



<%= form_for @post do |f| %>
    <%= f.hidden_field :user_id, :value => @current_user.id %>
    <br>
    <br>
    Title: <%= f.text_field :title %><br />
    <br>
    <br>
    <p> Content: <%= f.text_area :content %><br /> </p> 
    <%= f.submit %>
<% end %>
<h1>Or just delete it</h1>
<%= button_to "Destroy #{@post.title}", post_path(@post), method: :delete %><br>