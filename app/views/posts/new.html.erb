<h1> Create a new post! </h1>

<%= form_for @post do |f| %>
    <%= f.label :user_id %>
    <p> <%= f.collection_select :user_id, User.all, :id, :username %> </p>
    <br>
    <br>
    Title: <%= f.text_field :title %><br />
    <br>
    <br>
    <p> Content: <%= f.text_area :content %><br /> </p> 
    <%= f.submit %>
<% end %>