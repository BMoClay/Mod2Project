<h1> Create a new post! </h1>

<% if flash[:post_errors] %>
  <ul>
    <% flash[:post_errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post do |f| %>
<%= f.label :user %>
  <%= f.collection_select :user_id, User.all, :id, :username, prompt: true %>
    <br>
    <br>
    Title: <%= f.text_field :title %><br />
    <br>
    <br>
    <p> Content: <%= f.text_area :content %><br /> </p> 
    <%= f.submit %>
<% end %>