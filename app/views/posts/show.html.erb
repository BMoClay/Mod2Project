<h1> Post Page </h1>

<h2> Title: <%= @post.title %> </h2>
<br>
<br>
<h2> Content: <%= @post.content %> </h2>
<br>
<h2> Comment on this post </h2>
  <%= form_for @comment do |f| %>
    <%= f.hidden_field :user_id, :value => @current_user.id %>
    <br>
    <br>
    <%= f.text_area :comment %><br />
    <br>
    <br>
    <%= f.submit %>
<% end %>